<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#fff"
    
    
    >
     <com.coboltforge.slidemenu.SlideMenu
        android:id="@+id/slideMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >



         <LinearLayout 
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:orientation="vertical"
             android:weightSum="10"
             >
         
         
         
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="9"
    android:weightSum="10"
    android:orientation="horizontal"
    android:background="#eee"
    >
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        > </LinearLayout>
      
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="8"
        android:weightSum="10"
        android:orientation="vertical"
        >
    
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="8"
        android:orientation="vertical"
        > 
             <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
            ></LinearLayout>
             
             
             <!-- 
             <TextView 
                 android:id="@+id/current_loc_RideLater"
                 android:layout_width="fill_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.8"
                 android:background="#fff"
                 android:text="@string/current_location"
                 android:gravity="center_vertical|start"
                 android:paddingLeft="8dip"
                 android:textColor="#000"
                 
                 
                 />
              -->
              <LinearLayout 
                 android:layout_height="0dp"
                 android:layout_width="fill_parent"
                 android:layout_weight="0.8"
                 android:weightSum="10"
                 android:orientation="horizontal"
                 android:background="#fff"
                 android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        >	
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:src="@drawable/destination" />
             
             <TextView
                android:id="@+id/current_loc_RideLater"
                 android:layout_width="0dp"
                 android:layout_weight="9"
                 android:layout_height="fill_parent"
                 android:gravity="center_vertical|start"
                 android:paddingLeft="8dip"
                 android:text="@string/current_location"
                 android:textColor="#000" />
             
             </LinearLayout>
             <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
            ></LinearLayout>
              <LinearLayout 
                 android:layout_height="0dp"
                 android:layout_width="fill_parent"
                 android:layout_weight="0.8"
                 android:weightSum="10"
                 android:orientation="horizontal"
                 android:background="#fff"
                 android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        >	
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:src="@drawable/cab" />
             <TextView 
                 android:id="@+id/cab_type_RideLater"
                 android:layout_width="0dp"
                 android:layout_height="fill_parent"
                 android:layout_weight="9"
                 android:background="#fff"
                 android:text="@string/cabtype"
                 android:gravity="center_vertical|start"
                 android:paddingLeft="8dip"
                 android:textColor="#000"
                 
                 
                 />
             </LinearLayout>
        <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
            ></LinearLayout>
          <LinearLayout 
                 android:layout_height="0dp"
                 android:layout_width="fill_parent"
                 android:layout_weight="0.8"
                 android:weightSum="10"
                 android:orientation="horizontal"
                 android:background="#fff"
                 android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        >	
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:src="@drawable/source" />
             <TextView 
                 android:id="@+id/destination_RideLater"
                 android:layout_width="0dp"
                 android:layout_height="fill_parent"
                 android:layout_weight="9"
                 android:background="#fff"
                 android:text="@string/destination"
                 android:gravity="center_vertical|start"
                 android:paddingLeft="8dip"
                 android:textColor="#000"
                 
                 
                 />
             </LinearLayout>
             <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
             />
         <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
            android:weightSum="10"
            android:orientation="horizontal"
            >
             <TextView 
                 android:layout_width="0dp"
                 android:layout_height="fill_parent"
                 android:layout_weight="3"
                 android:text="@string/distance"
                 android:textSize="16sp"
                 android:textColor="#000"
                 android:textStyle="bold"
                 />
             <TextView 
                 android:id="@+id/distance_RideLater"
                 android:layout_width="0dp"
                 android:layout_height="fill_parent"
                 android:layout_weight="2.5"
                 android:text="990 mi "
                 android:textSize="16sp"
                 android:textColor="#000"
              
                 />
              <TextView 
                 android:layout_width="0dp"
                 android:layout_height="fill_parent"
                 android:layout_weight="2.8"
                 android:text="@string/permile"
                 android:textSize="16sp"
                 android:textColor="#000"
                 android:textStyle="bold"
                 />
              <TextView 
                  android:id="@+id/fare_RideLater"
                 android:layout_width="0dp"
                 android:layout_height="fill_parent"
                 android:layout_weight="1.7"
                 android:text="$15"
                 android:textSize="16sp"
                 android:textColor="#000"
              
                 />
             
             
             
         </LinearLayout>
         
         
         <LinearLayout 
         
         android:id="@+id/cab_details_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
            android:weightSum="10"
            android:orientation="horizontal"
         	android:visibility="visible"
            >
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="5"
                android:weightSum="10"
                
                
                >
                 <TextView 
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="@string/pickup_time"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    />
                 <TextView 
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="@string/pickup_date"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    />
                <TextView 
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="@string/driver_name"
                    android:textColor="#000"
                     android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    />
                <TextView 
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="@string/contact"
                    android:textColor="#000"
                     android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    />
                <TextView 
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="@string/cab_num"
                    android:textColor="#000"
                     android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    />
                
            </LinearLayout>  
                
               <LinearLayout 
               
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="5"
                android:weightSum="10"
                
                
                >
                <TextView 
                    android:id="@+id/pickup_time_RL"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="05:55 PM"
                    android:textColor="#000"
                     android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    />
                <TextView 
                    android:id="@+id/pick_up_date_RL"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="04/02/2014"
                    android:textColor="#000"
                     android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    />
                <TextView 
                    android:id="@+id/driver_name_RideLater"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="Mr. XYZ"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    />
                <TextView 
                    android:id="@+id/driver_contact_num_RideLater"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="+41123456789"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:gravity="center_vertical|start"
                    />
                <TextView 
                    android:id="@+id/Cab_num_RideLater"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="US 123456AZ"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:gravity="center_vertical|start"
                    />
                   
                   
                   
                   
               </LinearLayout> 
            
             
             
        </LinearLayout>
        
        
        
        
        
        </LinearLayout>
    
  </LinearLayout>
        
        
        
        
        <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
   
    
    </LinearLayout>
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="#eee"
    android:weightSum="2"
    android:id="@+id/confim_button_layout"
    android:orientation="horizontal"
    android:visibility="gone"
    >
    <ImageButton 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/confirm_img_user_rl"
            android:src="@drawable/confirm"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
           
            />
        <ImageButton 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/reject_img_user_rl"
            android:src="@drawable/reject"
            android:scaleType="centerInside"
            
            android:background="@android:color/transparent"
            
            />
    
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="#eee"
android:gravity="center_horizontal"
    android:id="@+id/booknow_button_layout"
    android:visibility="visible"
 
    
    >
    
              <ImageButton 
                  
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/booknowbutton_RL"
                  android:layout_gravity="center_horizontal|bottom"
                  android:src="@drawable/book_now"
                  android:background="@android:color/transparent"
                  />
    
</LinearLayout>

</LinearLayout>
</com.coboltforge.slidemenu.SlideMenu>
     
    
    </RelativeLayout>